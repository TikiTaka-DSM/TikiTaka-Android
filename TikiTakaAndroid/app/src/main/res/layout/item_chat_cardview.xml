<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/chatCard_myChat_textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/chat_textview"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="안녕"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chatCard_myImage_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_launcher_background"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chatCard_myRecording_textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/chat_textview"
        android:drawableLeft="@drawable/icon_play"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text=" 00:09"
        android:visibility="invisible"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chatCard_friendProfile_imageView"
        android:layout_width="50dp"
        android:visibility="invisible"
        android:layout_height="50dp"
        android:background="@color/mainCoral"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chatCard_friendChat_textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/chat_textview"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:visibility="invisible"
        android:paddingRight="15dp"
        android:text="그래 안녕"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/chatCard_friendProfile_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chatCard_friendImage_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_launcher_background"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/chatCard_friendProfile_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chatCard_friendRecording_textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/chat_textview"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text=" 00:09"
        android:visibility="invisible"
        android:drawableLeft="@drawable/icon_play"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/chatCard_friendProfile_imageView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>